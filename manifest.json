{
  "manifest_version": 2,
  "name": "Piwik Checker",
  "description": "__MSG_extention_description__",
  "version": "0.1",
  "devtools_page": "devtools.html",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Piwik Checker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "inject.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "default_locale": "en"
}
