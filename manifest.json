{
  "manifest_version": 2,
  "name": "Piwik Checker",
  "description": "Description",
  "version": "0.1",
  "devtools_page": "devtools.html",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Google Mail",
    // optional; shown in tooltip
    "default_popup": "popup.html"
    // optional
  },
  "content_scripts": [
    {
      "js": [
        "inject.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end"
    }
  ]
}
